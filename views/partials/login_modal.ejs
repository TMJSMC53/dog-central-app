<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Dog Central</title>
</head>

<body>
  <!-- MODAL -->
  MODAL
  <div id="login-modal" class="login-modal">
    <div class="modal">
      <div class="top-form">
        <div class="close-modal">
          <span class="fas fa-times"></span>
        </div>
      </div>
      <div class="login-form">
        <h2 class="fw-bold text-primary">LOGIN</h2>
        <span class="text-primary">Please enter your username and password</span>
        <form method="POST" action="">
          <section class="form-control">
            <div class="error" style="background-color: red;"></div><br>
            <input type="text" id="username" placeholder="Username" required /><br>
            <input type="password" id="password" placeholder="Password" required /><br>
            <button type="submit" class="btn-login text-accent-100">Login</button>
            <!-- <a href="/auth/login">Login</a> -->
            <a class="register-link text-primary" href="/auth/register">Don't have an account? Register</a>
          </section>
        </form>
      </div>
    </div>
  </div>

</body>

</html>